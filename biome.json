{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "complexity": {
          "noBannedTypes": "off"
        },
        "style": {
          "useImportType": "off"
        },
        "correctness": {
          "noUnusedVariables": "error",
          "noUnusedImports": "error"
        }
      }
    },
    "formatter": {
      "indentStyle": "space"
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "lineWidth": 100
      },
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      }
    },
    "files": {
      "ignore": ["node_modules", "dist", "package.json"]
    }
  }